% tools, converters

# md5 -> {text}
echo -n "<text>" | md5

# hmac-sha256 -> {key} {text}
echo -n "<text>" | openssl dgst -sha256 -hmac "{{key}}" -binary | xxd -p -c 256

# b64-enc -> {text}
echo -n "<text>" | base64

% uuid generators

# uuid
uuidgen | tr 'A-Z' 'a-z'

% json

# json pretty -> {json}
echo '<json>' | jq

% runbooks

# Open a runbook (fzf + glow preview; picks any *.md in ~/.runbooks)
glow "<file>"

$file: bash -lc 'fd -e md . "$HOME/.runbooks" | sort' --- \
  --preview '{}' \
  --query "" \
  --header 'Select a runbook'
